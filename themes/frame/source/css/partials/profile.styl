.profile 
    margin-top $margin-primary
    display flex
    flex-direction row-reverse
    justify-content space-evenly
    align-items center

    .profile-content 
        width 100%
        margin 0 $margin-l-0 0 0

        .profile-title
            margin-top 0
            margin-bottom $margin-m-0

        .profile-subtitle
            margin-top 0
            margin-bottom $margin-m-0
            
        .profile-body
            margin-top 0
            margin-bottom $margin-l-1

        .profile-title
            text-style(heading-h1)

        .profile-subtitle
            text-style(heading-h3)

        .profile-body
            text-style(body-default)

    .profile-links
        text-align center
        margin-top $margin-m-1

        .profile-link
            margin-top 0
            margin-bottom $margin-m-1
            text-style(header)
            text-align center
            font-size 50px

    .profile-image
        align-items center
        width 50%

    .profile-icons
        text-align center
        margin-top $margin-m-1

        & > a:not(:last-child)
          margin-right .5rem

        & > a > i
          font-size 3rem

    .span-icons
       font-size 24px
       color #FFBF00

@media (max-width: 800px)
    .profile
        flex-wrap wrap
        flex-direction column
        align-items baseline
        
        .profile-content
            width 100%
            margin-top $margin-m-1
            
        .profile-image
            text-align center
            width 100%
            